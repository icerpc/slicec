ExceptionSpecification: Throws = {
    throws_keyword <tr: TypeRef> => {
        let exception = tr.downcast::<Exception>().unwrap();
        Throws::Specific(exception)
    },
    throws_keyword any_exception_keyword => Throws::AnyException,
}

